# Cyberpunk Neon Todo App Environment Variables

# Application Configuration
VITE_APP_NAME=Cyberpunk Neon Todo
VITE_APP_VERSION=1.0.0

# Development Configuration
VITE_DEV_MODE=true
VITE_DEBUG_MODE=false

# Theme Configuration
VITE_DEFAULT_THEME=dark
VITE_ENABLE_THEME_TOGGLE=true

# Local Storage Keys
VITE_STORAGE_PREFIX=cyberpunk_todo_
VITE_TODOS_STORAGE_KEY=todos
VITE_THEME_STORAGE_KEY=theme
VITE_USER_PREFERENCES_KEY=user_prefs

# Animation Settings
VITE_ENABLE_ANIMATIONS=true
VITE_ANIMATION_DURATION=300

# Neon Effects Configuration
VITE_ENABLE_NEON_EFFECTS=true
VITE_NEON_GLOW_INTENSITY=high
VITE_CYBERPUNK_MODE=enabled

# Performance Settings
VITE_MAX_TODOS_DISPLAY=100
VITE_AUTO_SAVE_INTERVAL=1000

# Feature Flags
VITE_ENABLE_SOUND_EFFECTS=false
VITE_ENABLE_PARTICLES=true
VITE_ENABLE_GLITCH_EFFECTS=true